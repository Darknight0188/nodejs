extends ../index

block content
    
    h1 Calculate salary

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="", method="POST")
        .form-group
            label(for="workday") Work Day
            input#workday.form-control(type="number", name="workday", value='')
        .form-group    
            label(for="dayoff") Day Off
            input#dayoff.form-control(type="number", name="dayoff", value='')            

        button(class="btn btn-primary") Calculate
